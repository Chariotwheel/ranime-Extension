{

  "description": "Add functionalities to r/anime",
  "manifest_version": 2,
  "name": "r/anime Enhanced",
  "version": "1.3",
  "permissions": [
    "https://shit-taste.net/*",
    "https://graphql.anilist.co/*"
  ],
  "homepage_url": "https://github.com/Chariotwheel/ranime-Extension",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/r/anime/*",
        "*://*.reddit.com/r/manga/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "enhance.js"
      ],
      "css": [
        "enhance.css"
      ]
    }
  ]

}
